<div class="row">
  <div class="col-md-10">
    <h2>Result for searching Members</h2>
  </div>
</div>

<div class="row">
  <% if @members.present? %>
    <% @members.each do |member| %>
      <div class="col-md-10 well member">
        <%= member.full_name %>
        <% if current_user %>
          <%= link_to "Follow", friendships_path(friend_id: member.id), method: :post,
                        class: "btn btn-primary pull-right" unless current_user.follows_or_same?(member) %>
        <% end %>
      </div>
    <% end %>
  <%= will_paginate @members, renderer: BootstrapPagination::Rails, class: 'pull-left paginate' %>
  <% else %>
    There's no results
  <% end %>
</div>
